@model IEnumerable<pits.Models.ProfileM>

@{
    Layout = "MyLayout";
}

@foreach (var img in Model)
{

 <div class="container">
    <div class="main-body">
        <div class="row gutters-sm">
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex flex-column align-items-center text-center">
                            <img src="~/image/@img.Image" alt="Admin" class="rounded-circle" width="160" height="170">
                            <div class="mt-3">
                                    <h4>@img.Name</h4>
                                
                               
                            </div>
                        </div>
                    </div>
                </div>
                
            </div>
            <div class="col-md-8">
                <div class="card mb-3">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Email</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                               @img.Email
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Phone</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @img.Phone
                            </div>
                        </div>

                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Address</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @img.Address
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-12">
                                <a class="btn btn-primary text-white" asp-controller="Author" asp-action="AddProfile" >Add New</a>
                                @*<a class="btn btn-success text-white">Edit</a>*@
                                @*<a asp-controller="Profile" asp-action="AddProfile" class="btn btn-primary">Add New</a>*@
                            </div>
                        </div>
                    </div>
                </div>

                

            </div>
        </div>

    </div>
 </div>
 }